    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>oose.dea.presentation.controller.LoginViewPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
